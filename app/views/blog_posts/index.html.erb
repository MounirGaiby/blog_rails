<div class="flex flex-col p-4">
  <div>
    <h1>Blog</h1>
  </div>
  <div>
    <p class="underline text-blue-500"><%= link_to "New Blog Post", new_blog_post_path %></p>
  </div>
  <% @blog_posts.each do |post|%>
    <div class="border border-gray-300 p-3 m-3">
      <% if post.draft? %>
        <div>
          <p class="p-2 rounded bg-gray-100 text-gray-900">Draft</p>
        </div>
      <% elsif post.scheduled?%>
        <div>
          <p class="p-2 rounded bg-blue-100 text-blue-900">Scheduled</p>
        </div>
      <% end %>
      <div class="p-4">
        <h2 class="underline text-blue-500">
          <%= link_to post.title, blog_post_path(post) %>
        </h2>
        <p>
          <%= post.content %>
        </p>
      </div>
    </div>
  <% end %>
  <div>
  </div>
</div>
